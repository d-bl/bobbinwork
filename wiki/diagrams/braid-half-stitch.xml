<?xml version="1.0" encoding="UTF-8"?>
<diagram
  xmlns="http://BobbinWork.googlecode.com/bw.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://BobbinWork.googlecode.com bw.xsd"
  xmlns:xi="http://www.w3.org/2001/XInclude"
>
  <title>
    <value lang="en">Copyright 2009, J. Pol, some rights reserved: http://creativecommons.org/licenses/by/3.0/</value>
  </title>
  <xi:include href='http://bobbinwork.googlecode.com/svn/!svn/bc/709/trunk/src/main/resources/nl/BobbinWork/diagram/xml/basicStitches.xml'/>
  <group pairs="1-9">
    <title>
      <value lang="en">Braid in half stitch</value>
      <value lang="nl">Bandje met netslagen</value>
    </title>

    <new_bobbins nrs="1,2,7,8,9,10"><style color="#0000FF"></style></new_bobbins>
    <new_bobbins nrs="3,4,5,6"><style color="#FF0000"><shadow color="#FFBBBB" width="5"/></style></new_bobbins>
    <group id="start" pairs="1-9">
      <title>
        <value lang="en">False footside</value>
        <value lang="nl">Opzet</value>
      </title>
      <stitch pairs="1-2">
        <title>
          <value lang="en">false footside left corner: three pair on two temporary pins, twisted cloth stitch</value>
          <value lang="nl">drie paar om twee hulpspelden, dubbele netslag</value>
        </title>
        <style color="#FF0000" width="2" />
        <pair start="30,110" end="45,120" />
        <pair start="40,100" end="30,120" />
        <copy of="F"><rotate centre="15,15" angle="25"/><move x="25" y="90"/></copy>
        <copy of="G"><rotate centre="15,15" angle="-20"/><move x="25" y="100"/></copy>
        <copy of="N"><rotate centre="15,15" angle="-20"/><move x="25" y="100"/></copy>
        <copy of="O"><rotate centre="15,15" angle="-20"/><move x="25" y="100"/></copy>
        <copy of="P"><rotate centre="15,15" angle="-20"/><move x="25" y="100"/></copy>
      </stitch>  
      <pin position="40,116"/>
      <copy of="ffs" pairs="3-4"><move x="075" y="85"/></copy><pin position="085,110"/>
      <copy of="ffs" pairs="5-6"><move x="135" y="85"/></copy><pin position="145,110"/>
      <copy of="ffs" pairs="7-8"><move x="195" y="85"/></copy><pin position="205,110"/>
    </group>
    <group id="x"  pairs="1-9">
      <title>
         <value lang="en">2 rows</value>
         <value lang="nl">2 toeren</value>
      </title>
      <group id="x1"  pairs="1-9">
        <title>
          <value lang="en">row 1</value>
          <value lang="nl">toer heen</value>
        </title>
        <copy of="tc_ltr" pairs="2-3"><move x="050" y="110"/></copy>
        <copy of="tc_ltr" pairs="3-4"><move x="080" y="110"/></copy>
        <copy of="tc_ltr" pairs="4-5"><move x="110" y="110"/></copy>
        <copy of="tc_ltr" pairs="5-6"><move x="140" y="110"/></copy>
        <copy of="tc_ltr" pairs="6-7"><move x="170" y="110"/></copy>
        <copy of="tc_ltr" pairs="7-8"><move x="200" y="110"/></copy>
        <pin position="235,140"/>
        <copy  of="hs-1" pairs="8-9"><move x="242" y="132"/></copy>
      </group> 
      <group id="x2"  pairs="1-9">
        <title>
          <value lang="en">row back</value>
          <value lang="nl">toer terug</value>
        </title>
        <copy of="tc_rtl" pairs="7-8"><move x="200" y="140"/></copy>
        <copy of="tc_rtl" pairs="6-7"><move x="170" y="140"/></copy>
        <copy of="tc_rtl" pairs="5-6"><move x="140" y="140"/></copy>
        <copy of="tc_rtl" pairs="4-5"><move x="110" y="140"/></copy>
        <copy of="tc_rtl" pairs="3-4"><move x="080" y="140"/></copy>
        <copy of="tc_rtl" pairs="2-3"><move x="050" y="140"/></copy>
        <copy of="fs-1"   pairs="1-2"><move x="022" y="162"/></copy>
      </group> 
    </group>
    <group id="x3"  pairs="1-9">
      <title>
         <value lang="en">2 rows</value>
         <value lang="nl">2 toeren</value>
      </title>
      <copy of="x1" pairs="1-9"><move y="60"/></copy>
      <copy of="x2"  pairs="1-9"><move y="60"/></copy>
    </group>
    <copy of="x3" pairs="1-9"><move y="60"/></copy>
    <copy of="x3" pairs="1-9"><move y="120"/></copy>
    <copy of="x3" pairs="1-9"><move y="180"/></copy>
    <copy of="x3" pairs="1-9"><move y="240"/></copy>
    <copy of="x3" pairs="1-9"><move y="300"/></copy>
    <copy of="x3" pairs="1-9"><move y="360"/></copy>
    <copy of="x3" pairs="1-9"><move y="420"/></copy>
    <copy of="x3" pairs="1-9"><move y="480"/></copy>
  </group>
</diagram>
