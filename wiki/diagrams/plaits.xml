  <group pairs="1001-1012" display="no">
    <title>
        <value lang="en">Library (building blocks for plait connections)</value>
        <value lang="nl">Bibliotheek (bouwstenen voor verbindingen in vlechten)</value>
        <value lang="de">Bibliothek (Bausteine fur Verbindungen von Flechter)</value>
    </title>
    <stitch pairs="1-6">
      <title><value lang="en">dummy</value></title>
      <style width="2" />
      <pair start="0,0" end="0,0" />
      <pair start="0,0" end="0,0" />
      <pair start="0,0" end="0,0" />
      <pair start="0,0" end="0,0" />
      <pair start="0,0" end="0,0" />
      <pair start="0,0" end="0,0" />
      <cross id="starC1" bobbins="3-6">
        <front start="-5,-2" c1="-3,0" c2="3,0" end="5,2" />
        <front start="-5,-2" c1="-3,0" c2="3,0" end="5,2" />
        <back start="5,-2" c1="3,0" c2="-3,0"  end="-5,2" />
        <back start="5,-2" c1="3,0" c2="-3,0"  end="-5,2" />
      </cross>
      <cross id="starC2" bobbins="7-10">
        <front start="-5,-2" c1="-3,0" c2="3,0" end="5,2" />
        <front start="-5,-2" c1="-3,0" c2="3,0" end="5,2" />
        <back start="5,-2" c1="3,0" c2="-3,0"  end="-5,2" />
        <back start="5,-2" c1="3,0" c2="-3,0"  end="-5,2" />
      </cross>
      <twist id="starT1" bobbins="1-4">
        <front start="5,-2" c1="3,0" c2="-3,0" end="-5,2" />
        <front start="5,-2" c1="3,0" c2="-3,0" end="-5,2" />
        <back start="-5,-2" c1="-3,0" c2="3,0"  end="5,2" />
        <back start="-5,-2" c1="-3,0" c2="3,0"  end="5,2" />
      </twist>
      <twist id="starT2" bobbins="5-8">
        <front start="5,-2" c1="3,0" c2="-3,0" end="-5,2" />
        <front start="5,-2" c1="3,0" c2="-3,0" end="-5,2" />
        <back start="-5,-2" c1="-3,0" c2="3,0"  end="5,2" />
        <back start="-5,-2" c1="-3,0" c2="3,0"  end="5,2" />
      </twist>
      <twist id="starT3" bobbins="9-12">
        <front start="5,-2" c1="3,0" c2="-3,0" end="-5,2" />
        <front start="5,-2" c1="3,0" c2="-3,0" end="-5,2" />
        <back start="-5,-2" c1="-3,0" c2="3,0"  end="5,2" />
        <back start="-5,-2" c1="-3,0" c2="3,0"  end="5,2" />
      </twist>
    </stitch>
    <stitch id="star" pairs="7-12">
      <title><value lang="en">three plait connection</value></title>
      <pair start="-25,-15"  end="25,15" />
      <pair start="-25,-15"  end="25,15" />
      <pair start="0,-30" end="0,30" />
      <pair start="0,-30" end="0,30" />
      <pair start="25,-15" end="-25,15" />
      <pair start="25,-15" end="-25,15" />

      <copy of="starT1"><move y="-30"  /><rotate centre="0,0" angle="-60" /></copy>
      <copy of="starT2"><move y="-30"  /><rotate centre="0,0" angle="0" /></copy>
      <copy of="starT3"><move y="-30"  /><rotate centre="0,0" angle="60" /></copy>
  
      <copy of="starC1"><move y="-25" /><rotate centre="0,0" angle="-30" /></copy>
      <copy of="starC2"><move y="-25" /><rotate centre="0,0" angle="30" /></copy>
      <copy of="starT2"><move y="-15"  /><rotate centre="0,0" angle="0" /></copy>
      <copy of="starC1"><move y="-15" /><rotate centre="0,0" angle="-60" /></copy>
      <copy of="starC2"><move y="-15" /><rotate centre="0,0" angle="60" /></copy>
  
      <copy of="starT1"><move y="0" x="-25" /><rotate centre="0,0" angle="0" /></copy>
      <copy of="starT3"><move y="0" x="25" /><rotate centre="0,0" angle="0" /></copy>

      <copy of="starC1"><move y="15" /><rotate centre="0,0" angle="60" /></copy>
      <copy of="starC2"><move y="15" /><rotate centre="0,0" angle="-60" /></copy>
      <copy of="starT2"><move y="15"  /><rotate centre="0,0" angle="0" /></copy>
      <copy of="starC1"><move y="25" /><rotate centre="0,0" angle="30" /></copy>
      <copy of="starC2"><move y="25" /><rotate centre="0,0" angle="-30" /></copy>

      <copy of="starT1"><move y="30"/><rotate centre="0,0" angle="60" /></copy>
      <copy of="starT2"><move y="30"/><rotate centre="0,0" angle="0" /></copy>
      <copy of="starT3"><move y="30"/><rotate centre="0,0" angle="-60" /></copy>
    </stitch>
  </group>
  <group id="x1" pairs="1-6">
    <title>
        <value lang="en">diagram</value>
        <value lang="nl">werktekening</value>
        <value lang="de">Arbeitszeichnung</value>
    </title>
    <group id="x2" pairs="1-6">
      <title><value lang="en">plaits</value></title>
    
      <new_bobbins nrs="5,7"><style color="#00FF00"></style></new_bobbins>
      <new_bobbins nrs="6,8"><style color="#FF0000"></style></new_bobbins>

      <copy of="ctctc" pairs="1-2"><move x="160" y="35"/><rotate centre="170,100" angle="-60" /></copy>
      <copy of="ctctc" pairs="3-4"><move x="160" y="35"/><rotate centre="170,100" angle="0" /></copy>
      <copy of="ctctc" pairs="5-6"><move x="160" y="35"/><rotate centre="170,100" angle="60" /></copy>
      <copy of="star" pairs="1-6"><move x="170" y="100"/></copy>
      <copy of="ctctc" pairs="1-2"><move x="160" y="135"/><rotate centre="170,100" angle="60" /></copy>
      <copy of="ctctc" pairs="3-4"><move x="160" y="135"/><rotate centre="170,100" angle="0" /></copy>
      <copy of="ctctc" pairs="5-6"><move x="160" y="135"/><rotate centre="170,100" angle="-60" /></copy>
     <!-- 
