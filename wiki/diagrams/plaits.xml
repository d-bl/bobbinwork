    <group id="x2" pairs="1-6">
      <title><value lang="en">plaits</value></title>
    
      <new_bobbins nrs="5,7"><style color="#00FF00"></style></new_bobbins>
      <new_bobbins nrs="6,8"><style color="#FF0000"></style></new_bobbins>

      <copy of="ctctc" pairs="1-2"><move x="160" y="40"/><rotate centre="170,100" angle="-60" /></copy>
      <copy of="ctctc" pairs="3-4"><move x="160" y="40"/><rotate centre="170,100" angle="0" /></copy>
      <copy of="ctctc" pairs="5-6"><move x="160" y="40"/><rotate centre="170,100" angle="60" /></copy>
      <copy of="star" pairs="1-6"><move x="170" y="100"/></copy>
      <copy of="ctctc" pairs="1-2"><move x="160" y="130"/><rotate centre="170,100" angle="60" /></copy>
      <copy of="ctctc" pairs="3-4"><move x="160" y="130"/><rotate centre="170,100" angle="0" /></copy>
      <copy of="ctctc" pairs="5-6"><move x="160" y="130"/><rotate centre="170,100" angle="-60" /></copy>
